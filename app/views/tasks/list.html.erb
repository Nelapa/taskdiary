<h1>Tasks</h1>

<%= link_to 'New task', new_task_path %>
<hr>
<div style='width:40%; float:left'>
<ol>
  <caption> Active tasks:</caption> 
  <% @tasks.each do |task|%>
    <% if task.status and (not task.complete) %>
      <li><%= link_to task.name, task_path(task) %> (till <%= task.due %>)</li>
    <% end %>
  <% end %>
 </ol>
 </div>
 
 <div style='width:30%; float:left'>
<ol>
  <caption> Delayed tasks:</caption> 
  <% @tasks.each do |task|%>
  <% if (not task.status) and (not task.complete) %>
      <li><%= link_to task.name, task_path(task) %></li>
    <% end %>
  <% end %>
 </ol>
 </div>
 
 <div style='width:30%; float:left'>
<ol>
  <caption> Completed tasks:</caption> 
  <% @tasks.each do |task|%>
  <% if task.complete %>
      <li><%= link_to task.name, task_path(task) %></li>
    <% end %>
  <% end %>
 </ol>
 </div>